<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/RL_APPBAR_ROOT_BG"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/main_primary_color"/>

    <!--  Sub Fragment TEXTBOX Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height">

        <ImageButton
            android:id="@+id/IB_APPBAR_MENU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@android:drawable/stat_sys_warning"/>

        <ImageButton
            android:id="@+id/IB_APPBAR_BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@android:drawable/stat_sys_warning"/>

        <TextView
            android:id="@+id/TV_APPBAR_TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="스마트하우스부동산자산관리 진단프로그램"
            android:textColor="@color/text_color_white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/TV_APPBAR_LOGOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:singleLine="true"
            android:text="로그아웃"
            android:textColor="@color/text_color_white"
            android:textSize="19sp" />

        <Button
            android:id="@+id/IB_APPBAR_ACTION"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:background="@drawable/selector_button_trans_color_bg_oval_90dp"
            android:text="다음"
            android:textColor="@drawable/selector_button_login_text_color"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
