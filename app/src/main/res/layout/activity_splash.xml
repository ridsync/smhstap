            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#111111"
                android:alpha="0.2"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCDEFGHIGKLMNOPQRSTUIVWXYZ"
                android:textSize="20sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCDEFGHIGKLMNOPQRSTUIVWXYZ"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCDEFGHIGKLMNOPQRSTUIVWXYZ"
                android:fontFamily="@font/roboto_main"
                android:textSize="20sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCDEFGHIGKLMNOPQRSTUIVWXYZ"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:textSize="20sp"
                android:textColor="@color/main_text_primary" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- 숫자 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#111111"
                android:alpha="0.2"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textSize="20sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:fontFamily="@font/roboto_main"
                android:textSize="20sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:fontFamily="@font/notosanscjk_support"
                android:textSize="20sp"
                android:textColor="@color/main_text_primary" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <!-- 한글 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#111111"
            android:alpha="0.2"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가나다라마바사아자차카타파하"
            android:textSize="20sp"
            android:textColor="@color/main_text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가나다라마바사아자차카타파하"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textColor="@color/main_text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가나다라마바사아자차카타파하"
            android:fontFamily="@font/roboto_main"
            android:textSize="20sp"
            android:textColor="@color/main_text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가나다라마바사아자차카타파하"
            android:fontFamily="@font/notosanscjk_support"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/main_text_primary" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />


    </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tvEasterEgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:visibility="gone"
        android:text="Smarthausⓒrasset.co.kr"
        android:textColor="#80000000"
        android:textSize="20sp"/>

</RelativeLayout>