<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".ui.SplashActivity"
    android:background="@color/basic_color_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_margin="16dp"
            android:text="Font Sample"
            android:textSize="16sp"
            android:textColor="@color/main_text_primary" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#111111"
                android:alpha="0.2"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="system default"
                android:textSize="16sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sans-serif"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="roboto regular in app"
                android:fontFamily="@font/roboto_main"
                android:textSize="16sp"
                android:textColor="@color/main_text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notosanscjkkr_regular in app"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:textSize="16sp"
                android:textColor="@color/main_text_primary" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        </LinearLayout>

        <!-- 영어 -->

        <LinearLayout
