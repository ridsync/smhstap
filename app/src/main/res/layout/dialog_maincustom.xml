<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_main_bg_color_rounded_normal"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="21dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:src="@drawable/logo_small"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

            <LinearLayout
                android:id="@+id/LL_CONTENTS_LAYOUT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="21dp"
                android:minWidth="250dp"
                android:minHeight="120dp"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/TV_DEFAULT_CONTENTS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스마트하우스 부동산자산관리 진단프로그램"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BTN_CANCEL"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="60dp"
                    android:text="@string/btn_cancel"
                    android:textColor="@color/text_color_white"
                    android:background="@drawable/selector_button_main_color_accent_oval_3dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/BTN_DONE"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="@string/btn_confirm"
                    android:textColor="@color/text_color_white"
                    android:background="@drawable/selector_button_main_color_accent_oval_3dp"
                    android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
