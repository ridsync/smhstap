<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".ui.SplashActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스마트하우스 부동산자산관리 진단프로그램"
                android:textSize="20sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smarthaus Real Estate Asset Management Diagnostic program"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/IB_TEMP_ACTION"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_appbar_button_trans_color_bg_oval_90dp"
                android:text="다음"
                android:textColor="@drawable/selector_button_login_text_color"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>